<Window x:Class="Wpfpgm1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfpgm1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="Beige">
        <Label Foreground="PaleVioletRed" Margin="10" FontSize="20">Enter text to save input. Type "STOP" to end </Label>
        <TextBox Margin="10,10" Name="input1" Height="50" TextWrapping="Wrap" ></TextBox>
        <Button  Click="DisplayButton_Click" HorizontalAlignment="Center" FontSize="25">Display Content</Button>
        <TextBox Margin="30,10" x:Name="output" Height="100" TextWrapping="Wrap"></TextBox>
        
        
    </StackPanel>
</Window>
